# Cadence Settings
CADENCE_THRESHOLD=60
GRACE_PERIOD_SECONDS=3
ROLLING_AVERAGE_WINDOW=5

# Bluetooth Settings
# Leave empty to scan for any cadence sensor
# Or specify MAC address: CADENCE_SENSOR_MAC=AA:BB:CC:DD:EE:FF
CADENCE_SENSOR_MAC=
CADENCE_SENSOR_NAME=Cadence
BLE_SCAN_TIMEOUT=10

# UniFi OS Settings
# Create an API key at https://<your-unifi-host>/settings/admins (API Keys tab)
UNIFI_HOST=192.168.1.1
UNIFI_PORT=443
UNIFI_API_KEY=
UNIFI_SITE=default
UNIFI_VERIFY_SSL=false

# Peloton Settings
PELOTON_IP=192.168.1.100

# Firewall Rule Settings
# You can specify either FIREWALL_RULE_ID or FIREWALL_RULE_NAME
# The script will find the ID by name if only the name is provided
FIREWALL_RULE_ID=
FIREWALL_RULE_NAME=block_youtube_peloton

# Web Dashboard Settings
WEB_DASHBOARD_ENABLED=true
WEB_DASHBOARD_PORT=5000
WEB_DASHBOARD_HOST=0.0.0.0

# Logging Settings
LOG_LEVEL=INFO
LOG_FILE=peloton_cadence.log
